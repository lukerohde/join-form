<% if notice.present? %>
  <p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">

<h1>Email Templates</h1>

<%= link_to 'New Email Template', new_email_template_path, class: "btn btn-default pull-right" %>

<div class="xtable-responsive">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Short Name</th>
        <th>Subject</th>
        <th class="hidden-sm">Created At</th>
        <th class="hidden-sm">Updated At</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @email_templates.each do |email_template| %>
        <tr>
          <td><%= email_template.short_name %></td>
          <td><%= email_template.subject %></td>
          <td class="hidden-sm hidden-xs"><%=local_time_tag(email_template.created_at)%></td>
          <td class="hidden-sm hidden-xs"><%=local_time_tag(email_template.updated_at)%></td>
            <td>
              <%= link_to "<span class=\"glyphicon glyphicon-eye-open\"></span>".html_safe, new_email_template_preview_path(email_template) %>
              <%= link_to "<span class=\"glyphicon glyphicon-cog\"></span>".html_safe, edit_email_template_path(email_template) %>
              <%= link_to "<span class=\"glyphicon glyphicon-duplicate\"></span>".html_safe, new_email_template_path(duplicate_email_template_id: email_template) %>
              <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span>".html_safe, email_template, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
      <% end %>
    </tbody>
</table>

<br>

