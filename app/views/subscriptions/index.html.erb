<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">

    <h1>Subscriptions</h1>

    <div class="xtable-responsive">
      <table class="table table-condensed table-striped">
        <thead>
          <tr>
            <th>Join form</th>
            <th>Contact</th>
            <th>Step</th>
            <th class="hidden-sm">Creation Date</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @subscriptions.each do |subscription| %>
            <tr>
              <td><%= subscription.join_form.short_name %></td>
              <td>
                <%= subscription.person.display_name %><br/>
                <%= subscription.person.email %> </br>
                <%= subscription.person.mobile %></br>
                <%= subscription.person.external_id %>
              </td>
              <td><%= subscription.step %></td>
              <td class="hidden-sm hidden-xs"><%= subscription.created_at %></td>
              <td><%= link_to 'Show', join_path(union_id: subscription.join_form.union.short_name, join_form_id: subscription.join_form.short_name, id: subscription.token ) %> | 
                <%= link_to 'Edit', edit_join_path(union_id: subscription.join_form.union.short_name, join_form_id: subscription.join_form.short_name, id: subscription.token) %> | 
                <%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>