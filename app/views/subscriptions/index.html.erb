<% if notice.present? %>
  <p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">

    <h1>Subscriptions</h1>

    <div class="xtable-responsive">
      <table class="table table-condensed table-striped">
        <thead>
          <tr>
            <th>Join form</th>
            <th>Contact</th>
            <th>Step</th>
            <th class="hidden-sm">Created At</th>
            <th class="hidden-sm">Updated At</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @subscriptions.each do |subscription| %>
            <tr>
              <td><%= link_to subscription.join_form.short_name, edit_join_form_path(subscription.join_form) %></td>
              <td>
                <%= subscription.person.display_name %><br/>
                <%= subscription.person.email %> </br>
                <%= subscription.person.mobile %></br>
                <%= subscription.person.external_id %>
              </td>
              <td><%= subscription.step %></td>
              <td class="hidden-sm hidden-xs"><%=local_time_tag(subscription.created_at)%></td>
              <td class="hidden-sm hidden-xs"><%=local_time_tag(subscription.updated_at)%></td>
              <td>
                <%= link_to "<span class=\"glyphicon glyphicon-eye-open\"></span>".html_safe, join_path(union_id: subscription.join_form.union.short_name, join_form_id: subscription.join_form.short_name, id: subscription.token ) %>
                <%= link_to "<span class=\"glyphicon glyphicon-cog\"></span>".html_safe, edit_join_path(union_id: subscription.join_form.union.short_name, join_form_id: subscription.join_form.short_name, id: subscription.token) %>
                <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span>".html_safe, subscription.person.user? ? subscription : subscription.person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>