<div id="edit_credit_card">
  <!--
  <div class="form-group">
    <%= f.label :account_name, "Name On Card" %><br/>
    <%= f.text_field :account_name, class: "form-control" %>
  </div>
  -->
  <div id="stripe_error">
    <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  </div>

  <div class="form-group">
    <%= f.label :account_number, "Credit Card Number" %><br/>
    <%= f.text_field :account_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :expiry %><br/>
    <div class="row">
      <div class="col-sm-1">
        <%= f.select :expiry_month, 1..12, {}, class: "form-control" %>
      </div>
      <div class="col-sm-1">
        <%= f.select :expiry_year, Date.today.year..(Date.today.year+15), {}, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ccv, "CCV" %><br/>
    <%= f.text_field :ccv, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.hidden_field :stripe_token %>
  </div>
</div>