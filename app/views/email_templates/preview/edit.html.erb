
<%= form_for @email_template, url: email_template_preview_path(@email_template) do |f| %>
	<div class="form-group">
    <%= label_tag :preview_email %><br>
    <%= text_field_tag :preview_email, @email, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-default"%> 
<% end %>

<h2><strong>Subject:  <%= @subject %></strong></h2>

<h2>HTML Body</h2>
<div style="border:1px solid 0">
	<%= @body_html_css.html_safe %>
</div>

<h2>Plain Body</h2>
<div style="border:1px solid 0">
	<%= @body_plain.html_safe %>
</div>

