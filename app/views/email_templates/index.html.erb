<p id="notice"><%= notice %></p>

<h1>Listing Email Templates</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body html</th>
      <th>Css</th>
      <th>Body plain</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @email_templates.each do |email_template| %>
      <tr>
        <td><%= email_template.subject %></td>
        <td><%= email_template.body_html %></td>
        <td><%= email_template.css %></td>
        <td><%= email_template.body_plain %></td>
        <td><%= email_template.attachment %></td>
        <td><%= link_to 'Show', email_template %></td>
        <td><%= link_to 'Edit', edit_email_template_path(email_template) %></td>
        <td><%= link_to 'Destroy', email_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email template', new_email_template_path %>
