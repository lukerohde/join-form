<p id="notice"><%= notice %></p>

<h1>Listing Records</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Subject</th>
      <th>Body plain</th>
      <th>Body html</th>
      <th>Delivery status</th>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Recipient</th>
      <th>Sender</th>
      <th>Template</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.type %></td>
        <td><%= record.subject %></td>
        <td><%= record.body_plain %></td>
        <td><%= record.body_html %></td>
        <td><%= record.delivery_status %></td>
        <td><%= record.sender_id %></td>
        <td><%= record.recipient_id %></td>
        <td><%= record.recipient %></td>
        <td><%= record.sender %></td>
        <td><%= record.template_id %></td>
        <td><%= record.parent_id %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

